{
  "name": "helpdesk-system",
  "version": "2.0.0",
  "description": "Sistema completo de Help Desk para suporte técnico com autenticação JWT",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:performance": "jest tests/performance --runInBand",
    "test:ci": "jest --coverage --ci --watchAll=false --detectOpenHandles",
    "setup": "npm install && npm run init-data",
    "init-data": "node scripts/init-database.js",
    "migrate": "node scripts/migrate.js",
    "migrate:force": "node scripts/migrate.js --force",
    "migrate:sqlite": "node scripts/migrate.js --sqlite",
    "validate-migration": "node scripts/validate-migration.js",
    "validate-report": "node scripts/validate-migration.js --report",
    "seed": "node scripts/seed.js",
    "cluster": "USE_CLUSTER=true NODE_ENV=production node server.js",
    "backup": "node scripts/backup.js",
    "reset-db": "node scripts/reset-database.js",
    "logs": "tail -f logs/app.log",
    "coverage:report": "jest --coverage && open-cli coverage/lcov-report/index.html",
    "lint": "eslint src tests --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "helpdesk",
    "support",
    "tickets",
    "nodejs",
    "express",
    "api",
    "mysql",
    "sqlite",
    "jwt",
    "authentication",
    "testing"
  ],
  "author": "Pedro - Analista de Sistemas",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.5",
    "socket.io": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@eslint/js": "^9.36.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "open-cli": "^7.2.0",
    "prettier": "^3.0.3",
    "puppeteer": "^21.5.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/database.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PedroAbreu017/helpdesk-system.git"
  },
  "bugs": {
    "url": "https://github.com/PedroAbreu017/helpdesk-system/issues"
  },
  "homepage": "https://github.com/PedroAbreu017/helpdesk-system#readme"
}
